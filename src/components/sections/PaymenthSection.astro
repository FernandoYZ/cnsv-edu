---
import { Image } from 'astro:assets';
import QRYape from '@assets/images/donation/codigo_qr.webp';
import data from '@data';
const { payment } = data;

// Definición de colores mejorada
const colors = {
    primary: '#800020',         // Un rosa más vibrante
    primaryDark: '#CC3957',     // Versión más oscura para hover
    primaryLight: '#ff9eaa',    // Versión más clara para acentos
    background: '#1A1A1A',      // Un negro más suave
    border: '#333333',          // Gris oscuro para bordes
};
---

<section class="relative py-24 bg-neutral-950 overflow-hidden" aria-labelledby="payment-title">
    <!-- Elementos decorativos -->
    <div class="absolute inset-0">
        <div class="absolute inset-0" 
             style={`background-image: radial-gradient(circle at 1px 1px, ${colors.primary} 1px, transparent 0);
                    background-size: 32px 32px;
                    opacity: 0.1;`}>
        </div>
        <div class="absolute top-0 left-0 w-full h-64 bg-gradient-to-b from-[#800020]/20 to-transparent"></div>
        <div class="absolute bottom-0 right-0 w-96 h-96 bg-[#800020]/30 rounded-full filter blur-3xl opacity-20"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Encabezado -->
        <header class="max-w-2xl mx-auto text-center mb-16">
            <div class="inline-flex items-center justify-center space-x-3 mb-6">
                <div class="h-[1px] w-12 bg-gradient-to-r from-transparent via-[#800020] to-transparent"></div>
                <span class="px-4 py-2 rounded-full bg-[#800020]/20 text-sm font-medium text-[#ff9eaa] tracking-wider border border-[#800020]/30">
                    {payment.header.label}
                </span>
                <div class="h-[1px] w-12 bg-gradient-to-r from-transparent via-[#800020] to-transparent"></div>
            </div>
            <h2 id="payment-title" class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-6">
                {payment.header.titulo}
                <span class="relative whitespace-nowrap text-[#ff9eaa]">
                    <svg aria-hidden="true" viewBox="0 0 418 42" class="absolute left-0 top-full h-[0.4em] w-full fill-[#800020]/30" preserveAspectRatio="none">
                        <path d={payment.header.icono} />
                    </svg>
                    <span class="relative">{payment.header.span}</span>
                </span>
            </h2>
            <p class="text-lg text-gray-300 max-w-prose mx-auto">
                {payment.header.descripcion}
            </p>
        </header>

        <!-- Grid de Métodos de Pago -->
        <div class="grid lg:grid-cols-2 gap-8">
            <!-- Transferencia Bancaria -->
            <div class="group relative">
                <div class="absolute -inset-2 bg-gradient-to-r from-[#800020]/20 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300 blur-xl rounded-2xl"></div>
                <div class="relative p-8 bg-neutral-950/50 backdrop-blur-sm rounded-2xl border border-[#333333]">
                    <header class="flex items-center gap-4 mb-6">
                        <span class="inline-flex items-center justify-center w-12 h-12 rounded-xl bg-[#800020]/20 text-[#ff9eaa]">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                            </svg>
                        </span>
                        <h3 class="text-xl font-semibold text-white">{payment.datosBancarios.titulo}</h3>
                    </header>

                    {payment.datosBancarios.cuentas.map(cuenta => (
                        <div class="space-y-4">
                            <!-- Datos de Cuenta -->
                            <div class="p-4 rounded-xl bg-white/5 border border-[#333333]">
                                <div class="space-y-2">
                                    <div class="flex justify-between items-center">
                                        <span class="text-[#ff9eaa] font-medium">{cuenta.banco}</span>
                                        <span class="text-sm text-gray-400">{cuenta.tipo} - {cuenta.moneda}</span>
                                    </div>
                                    <div class="relative group/copy">
                                        <div class="flex items-center gap-2">
                                            <span class="text-white font-mono text-lg">{cuenta.numero}</span>
                                            <button 
                                                class="p-1 text-gray-400 hover:text-[#ff9eaa] transition-colors copy-button"
                                                data-copy={cuenta.numero}
                                                aria-label="Copiar número de cuenta"
                                            >
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                                                </svg>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Código CCI -->
                            <div class="p-4 rounded-xl bg-white/5 border border-[#333333]">
                                <div class="space-y-2">
                                    <span class="text-[#ff9eaa] font-medium">Código CCI</span>
                                    <div class="relative group/copy">
                                        <div class="flex items-center gap-2">
                                            <span class="text-white font-mono text-lg">{cuenta.cci}</span>
                                            <button 
                                                class="p-1 text-gray-400 hover:text-[#ff9eaa] transition-colors copy-button"
                                                data-copy={cuenta.cci}
                                                aria-label="Copiar CCI"
                                            >
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                                                </svg>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Datos del Titular -->
                            <div class="space-y-2 text-gray-300">
                                <p><span class="text-[#ff9eaa] font-medium">Titular:</span> {cuenta.titular}</p>
                                <p><span class="text-[#ff9eaa] font-medium">RUC:</span> {cuenta.ruc}</p>
                            </div>
                        </div>
                    ))}
                </div>
            </div>

            <!-- Yape -->
            <div class="group relative">
                <div class="absolute -inset-2 bg-gradient-to-r from-[#800020]/20 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300 blur-xl rounded-2xl"></div>
                <div class="relative p-8 bg-neutral-950/50 backdrop-blur-sm rounded-2xl border border-[#333333]">
                    <header class="flex items-center gap-4 mb-6">
                        <span class="inline-flex items-center justify-center w-12 h-12 rounded-xl bg-[#800020]/20 text-[#ff9eaa]">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                            </svg>
                        </span>
                        <h3 class="text-xl font-semibold text-white">{payment.datosYape.titulo}</h3>
                    </header>

                    <div class="flex flex-col items-center gap-6">
                        <!-- QR -->
                        <div class="relative p-4 bg-white rounded-2xl">
                            <Image
                                src={QRYape}
                                alt={payment.datosYape.qrAlt}
                                class="w-48 h-48"
                                width={192}
                                height={192}
                            />
                        </div>

                        <!-- Datos de Yape -->
                        <div class="text-center space-y-2">
                            <p class="text-[#ff9eaa] font-medium">{payment.datosYape.nombre}</p>
                            <div class="relative group/copy">
                                <div class="flex items-center justify-center gap-2">
                                    <span class="text-white font-mono text-lg">{payment.datosYape.numero}</span>
                                    <button 
                                        class="p-1 text-gray-400 hover:text-[#ff9eaa] transition-colors copy-button"
                                        data-copy={payment.datosYape.numero}
                                        aria-label="Copiar número de Yape"
                                    >
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Nota Informativa -->
        <div class="mt-12 text-center">
            <p class="text-gray-400 text-sm">
                Una vez realizada tu donación, no olvides guardar el comprobante de la operación.
                <br />
                Si deseas un certificado de donación, por favor contáctanos.
            </p>
        </div>
    </div>
</section>

<script>
    const showCopyNotification = (message: string = "¡Copiado!") => {
        const notification = document.createElement('div');
        notification.className = 'fixed bottom-4 right-4 bg-[#800020] text-white px-4 py-2 rounded-lg shadow-lg transform translate-y-full opacity-0 transition-all duration-300';
        notification.textContent = message;
        document.body.appendChild(notification);
    
        // Animar entrada
        requestAnimationFrame(() => {
            notification.classList.remove('translate-y-full', 'opacity-0');
        });
    
        // Animar salida después de 2 segundos
        setTimeout(() => {
            notification.classList.add('translate-y-full', 'opacity-0');
            setTimeout(() => {
                notification.remove();
            }, 300);
        }, 2000);
    };
    
    // Agregar feedback visual al copiar
    document.querySelectorAll('.copy-button').forEach(button => {
        button.addEventListener('click', async (e) => {
            e.preventDefault();
            const button = e.currentTarget as HTMLButtonElement;
            const textToCopy = button.dataset.copy || '';
            
            try {
                await navigator.clipboard.writeText(textToCopy);
                showCopyNotification();
                
                // Efecto visual en el botón
                button.classList.add('text-[#FF8DA3]');
                setTimeout(() => {
                    button.classList.remove('text-[#FF8DA3]');
                }, 200);
            } catch (err) {
                console.error('Error al copiar:', err);
                showCopyNotification('Error al copiar');
            }
        });
    });
</script>
    
<style>
    /* Variables de color */
    :root {
        --color-primary: #800020;
        --color-primary-dark: #CC3957;
        --color-primary-light: #FF8DA3;
        --color-background: #1A1A1A;
        --color-border: #333333;
    }
    
    /* Transiciones */
    .transition-all {
        transition-property: all;
        transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
        transition-duration: 300ms;
    }
    
    .transition-opacity {
        transition-property: opacity;
        transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
        transition-duration: 300ms;
    }
    
    .transition-colors {
        transition-property: background-color, border-color, color, fill, stroke;
        transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
        transition-duration: 300ms;
    }
    
    /* Efectos hover */
    @media (hover: hover) and (pointer: fine) {
        .hover\:scale-105:hover {
            transform: scale(1.05);
        }
    
        .group:hover .group-hover\:opacity-100 {
            opacity: 1;
        }
    
        .hover\:bg-primary-dark:hover {
            background-color: var(--color-primary-dark);
        }
    }
    
    /* Optimizaciones móviles */
    @media (max-width: 640px) {
        .p-8 {
            padding: 1.5rem;
        }
        
        .text-3xl {
            font-size: 1.75rem;
        }
    }
    
    /* Soporte para preferencias de movimiento reducido */
    @media (prefers-reduced-motion: reduce) {
        .transition-all,
        .transition-opacity,
        .transition-colors,
        .hover\:scale-105:hover,
        .group-hover\:opacity-100 {
            transition: none !important;
            transform: none !important;
        }
    
        [class*='animate-'] {
            animation: none !important;
        }
    }
    
    /* Mejoras de accesibilidad */
    button:focus-visible,
    a:focus-visible {
        outline: 2px solid var(--color-primary);
        outline-offset: 2px;
    }
    
    /* Mejoras para modo oscuro */
    @media (prefers-color-scheme: dark) {
        .dark\:bg-background {
            background-color: var(--color-background);
        }
    
        .dark\:border-border {
            border-color: var(--color-border);
        }
    
        .dark\:text-white {
            color: #ffffff;
        }
    }
    
    /* Optimizaciones de rendimiento */
    .backdrop-blur-sm {
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
    }
    
    .transform {
        transform: translateZ(0);
        will-change: transform;
    }
    
    /* Estilos para la notificación de copiado */
    .copy-notification {
        z-index: 50;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    }
    
    /* Animaciones suaves para los botones */
    .copy-button {
        position: relative;
        overflow: hidden;
    }
    
    .copy-button::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 100%;
        height: 100%;
        background-color: var(--color-primary);
        border-radius: 50%;
        transform: translate(-50%, -50%) scale(0);
        opacity: 0;
        transition: transform 0.3s ease, opacity 0.3s ease;
    }
    
    .copy-button:active::after {
        transform: translate(-50%, -50%) scale(1.5);
        opacity: 0.2;
    }
</style>