---
import { Image } from 'astro:assets';
import data from '@data';
const { transparency } = data;
---

<section class="relative py-24 bg--white overflow-hidden" aria-labelledby="transparency-title">
    <!-- Elementos decorativos -->
    <div class="absolute inset-0">
        <div class="absolute inset-0" 
             style="background-image: radial-gradient(#800020 0.5px, transparent 0.5px);
                    background-size: 24px 24px;
                    opacity: 0.05;">
        </div>
        
        <!-- Formas decorativas -->
        <div class="absolute bottom-12 -left-24 w-96 h-96 bg-primary/10 rounded-full blur-3xl"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Encabezado -->
        <header class="text-center max-w-2xl mx-auto mb-16">
            <div class="inline-flex items-center justify-center gap-3 mb-6">
                <div class="h-[1px] w-12 bg-gradient-to-r from-transparent via-primary to-transparent"></div>
                <span class="px-4 py-2 rounded-full bg-primary/5 text-sm font-medium text-primary">
                    {transparency.header.label}
                </span>
                <div class="h-[1px] w-12 bg-gradient-to-r from-transparent via-primary to-transparent"></div>
            </div>
            <h2 id="transparency-title" class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
                {transparency.header.titulo}
                <span class="relative whitespace-nowrap text-primary">
                    <svg aria-hidden="true" viewBox="0 0 418 42" class="absolute left-0 top-full h-[0.4em] w-full fill-primary/20" preserveAspectRatio="none">
                        <path d={transparency.header.icono} />
                    </svg>
                    <span class="relative">{transparency.header.span}</span>
                </span>
            </h2>
            <p class="text-lg text-gray-600 max-w-prose mx-auto">
                {transparency.header.descripcion}
            </p>
        </header>

        <!-- Grid de Logros -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-20">
            {transparency.logros.map((logro) => (
                <article class="group relative">
                    <div class="absolute -inset-2 bg-gradient-to-r from-primary/10 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300 blur-xl rounded-xl"></div>
                    <div class="relative h-full p-8 bg-white rounded-xl shadow-sm border border-gray-100">
                        <div class="flex items-start gap-4">
                            <span class="flex-shrink-0 inline-flex items-center justify-center w-12 h-12 rounded-xl bg-primary/10 text-primary">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={logro.icon} />
                                </svg>
                            </span>
                            <div>
                                <h3 class="text-3xl font-bold text-primary mb-1">{logro.numero}</h3>
                                <p class="font-medium text-gray-900 mb-1">{logro.titulo}</p>
                                <p class="text-sm text-gray-600">{logro.descripcion}</p>
                            </div>
                        </div>
                    </div>
                </article>
            ))}
        </div>

