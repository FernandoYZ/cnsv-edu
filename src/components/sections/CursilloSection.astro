---

<section class="relative py-24 overflow-hidden bg-gradient-to-b from-white via-gray-50/80 to-white">
    <!-- Elementos decorativos de fondo -->
    <div class="absolute inset-0">
        <div class="absolute inset-0" 
             style="background-image: radial-gradient(#800020 0.5px, transparent 0.5px);
                    background-size: 24px 24px;
                    opacity: 0.03;">
        </div>
        <div class="absolute top-0 right-0 w-1/3 h-1/3 bg-gradient-to-br from-primary/20 to-transparent blur-3xl"></div>
        <div class="absolute bottom-0 left-0 w-1/3 h-1/3 bg-gradient-to-tr from-primary/20 to-transparent blur-3xl"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Encabezado -->
        <header class="text-center max-w-3xl mx-auto mb-12 sm:mb-16 lg:mb-20">
            <div class="inline-flex items-center justify-center space-x-3 mb-6">
                <div class="h-[1px] w-12 bg-gradient-to-r from-transparent via-primary to-transparent"></div>
                <span class="px-4 py-2 rounded-full bg-primary/5 text-sm font-medium text-primary tracking-wider">
                    Proceso de Admisión 2025
                </span>
                <div class="h-[1px] w-12 bg-gradient-to-r from-transparent via-primary to-transparent"></div>
            </div>
            <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
                Cursillo de
                <span class="relative whitespace-nowrap text-primary">
                    Admisión
                    <svg aria-hidden="true" viewBox="0 0 418 42" class="absolute left-0 top-full h-[0.4em] w-full fill-primary/30" preserveAspectRatio="none">
                        <path d="M203.371.916c-26.013-2.078-76.686 1.963-124.73 9.946L67.3 12.749C35.421 18.062 18.2 21.766 6.004 25.934 1.244 27.561.828 27.778.874 28.61c.07 1.214.828 1.121 9.595-1.176 9.072-2.377 17.15-3.92 39.246-7.496C123.565 7.986 157.869 4.492 195.942 5.046c7.461.108 19.25 1.696 19.17 2.582-.107 1.183-7.874 4.31-25.75 10.366-21.992 7.45-35.43 12.534-36.701 13.884-2.173 2.308-.202 4.407 4.442 4.734 2.654.187 3.263.157 15.593-.78 35.401-2.686 57.944-3.488 88.365-3.143 46.327.526 75.721 2.23 130.788 7.584 19.787 1.924 20.814 1.98 24.557 1.332l.066-.011c1.201-.203 1.53-1.825.399-2.335-2.911-1.31-4.893-1.604-22.048-3.261-57.509-5.556-87.871-7.36-132.059-7.842-23.239-.254-33.617-.116-50.627.674-11.629.54-42.371 2.494-46.696 2.967-2.359.259 8.133-3.625 26.504-9.81 23.239-7.825 27.934-10.149 28.304-14.005.417-4.348-3.529-6-16.878-7.066Z" />
                    </svg>
                </span>
            </h2>
            <p class="text-base sm:text-lg text-gray-600 max-w-2xl mx-auto leading-relaxed">
                Formamos líderes con valores y excelencia académica. Sé parte de nuestra prestigiosa institución.
            </p>
        </header>

        <!-- Sectores -->
        <div class="grid lg:grid-cols-2 gap-8 mt-12">
            {sectoresData.map((sector, index) => (
                <article class="grupo-sector relative bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-100">
                    
                    <!-- Encabezado del sector -->
                    <div class="relative p-8">
                        <div class="flex items-start justify-between mb-6">
                            <div class="space-y-2">
                                <p class="text-sm font-medium text-primary tracking-wider">{sector.subtitulo}</p>
                                <h3 class="text-2xl font-bold text-gray-900">{sector.titulo}</h3>
                                <p class="text-gray-600">{sector.descripcion}</p>
                            </div>
                            <span class="inline-flex items-center justify-center w-12 h-12 rounded-xl bg-primary/5">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={sector.icon} />
                                </svg>
                            </span>
                        </div>
                        
                        <!-- Línea divisora -->
                        <div class="w-full h-px bg-gradient-to-r from-transparent via-primary/20 to-transparent my-6"></div>

                        <!-- Fechas -->
                        <div class="space-y-6">
                            <div class="fecha-item">
                                <div class="flex items-center gap-4">
                                    <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-primary/5">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                        </svg>
                                    </span>
                                    <div>
                                        <p class="text-sm text-gray-500">Inicio del Programa</p>
                                        <p class="font-medium text-gray-900">{sector.fechaInicio.dia}</p>
                                        <p class="text-primary text-sm">{sector.fechaInicio.hora}</p>
                                    </div>
                                </div>
                            </div>
                            <div class="fecha-item">
                                <div class="flex items-center gap-4">
                                    <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-primary/5">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7" />
                                        </svg>
                                    </span>
                                    <div>
                                        <p class="text-sm text-gray-500">Culminación</p>
                                        <p class="font-medium text-gray-900">{sector.fechaFin.dia}</p>
                                        <p class="text-primary text-sm">{sector.fechaFin.hora}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </article>
            ))}
        </div>

        <!-- Información Adicional -->
        <div class="mt-16">
            <div class="grid lg:grid-cols-3 gap-8">
                {infoAdicionalData.map((info) => (
                    <div class="grupo-info relative">
                        <div class="relative bg-white rounded-2xl p-8 border border-gray-100 shadow-lg">
                            <div class="absolute top-0 right-0 w-24 h-24 bg-primary/5 rounded-bl-full"></div>
                            <div class="relative">
                                <span class="inline-flex items-center justify-center w-14 h-14 rounded-xl bg-primary/10 mb-6">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" set:html={info.icono} />
                                </span>
                                <h4 class="text-xl font-bold text-gray-900 mb-3">{info.titulo}</h4>
                                <p class="text-gray-900 text-lg mb-2">{info.contenido}</p>
                                <p class="text-primary text-sm font-medium">{info.subcontenido}</p>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>
</section>
