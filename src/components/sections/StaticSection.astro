---
import data from '@data';
const { importancia, Static } = data;
const AnioActual = new Date().getFullYear();
const stats = [
    {
        quantity: "98%",
        title: "Tasa de Graduación",
        description: "De nuestros estudiantes completan exitosamente su formación"
    },
    {
        quantity: AnioActual - importancia.aniversario.anio,
        title: "Años de Experiencia",
        description: "Formando líderes con valores cristianos"
    },
    {
        quantity: "100%",
        title: "Docentes Calificados",
        description: "Con grados académicos y amplia experiencia"
    },
    {
        quantity: "15+",
        title: "Programas Especiales",
        description: "Desarrollo integral académico y espiritual"
    }
];
---

<section class="relative py-24 overflow-hidden">
    <!-- Enhanced gradient background with religious motif -->
    <div class="absolute inset-0">
        <div class="absolute inset-0 bg-gradient-to-b from-white via-[#800020]/10 to-white"></div>
        
        <!-- Subtle cross pattern background -->
        <div class="absolute inset-0" 
             style="background-image: url('data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M25 30h10v-10h5v10h10v5h-10v10h-5v-10h-10z' fill='%23800020' fill-opacity='0.05'/%3E%3C/svg%3E');">
        </div>
        
        <!-- Decorative elements -->
        <div class="absolute w-[500px] h-[500px] top-0 -left-32 -mt-[23rem] rounded-full bg-[#800020]/10 blur-3xl"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-6 lg:px-8">
        <!-- Enhanced Section Header -->
        <div class="max-w-2xl mx-auto text-center mb-16">
            <span class="inline-flex items-center justify-center px-4 py-1.5 text-base font-medium text-[#800020] rounded-full bg-[#800020]/5 mb-4">
                {Static.label}
            </span>
            <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
                {Static.titulo} 
                <span class="relative whitespace-nowrap text-[#800020]">
                    <svg aria-hidden="true" viewBox="0 0 418 42" class="absolute left-0 top-full h-[0.4em] w-full fill-[#800020]/20" preserveAspectRatio="none">
                        <path d=`${Static.icono}`></path>
                    </svg>
                    <span class="relative">{Static.span}</span>
                </span>
            </h2>
            <p class="text-lg text-gray-600 max-w-3xl mx-auto">
                {Static.descripcion}
            </p>
        </div>

        <!-- Stats Grid with Enhanced Cards -->
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
            {stats.map((stat, index) => (
                <div class="group relative">
                    <div class="absolute -inset-2 bg-gradient-to-r from-[#800020]/10 to-transparent rounded-xl opacity-0 group-hover:opacity-100 transition-all duration-500 blur-xl"></div>
                    
                    <div class="relative h-full p-8 bg-white rounded-xl border border-gray-100 shadow-sm hover:shadow-md transition-all duration-300">
                        <div class="space-y-4">
                            <div class="absolute top-0 right-0 w-24 h-24 bg-[#800020]/5 rounded-bl-full"></div>
                            
                            <div class="relative">
                                <span class="block text-4xl font-bold text-[#800020] mb-1">
                                    {stat.quantity}
                                </span>
                                <h3 class="text-xl font-semibold text-gray-900">
                                    {stat.title}
                                </h3>
                            </div>
                            
                            <p class="text-gray-600 leading-relaxed">
                                {stat.description}
                            </p>
                            
                            <div class="absolute bottom-6 right-6 w-12 h-12 flex items-center justify-center rounded-full bg-[#800020]/5 text-[#800020] group-hover:scale-110 transition-transform duration-300">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    {index === 0 ? (
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width={2} d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                                    ) : index === 1 ? (
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width={2} d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    ) : index === 2 ? (
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width={2} d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                                    ) : (
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width={2} d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                                    )}
                                </svg>
                            </div>
                        </div>
                    </div>
                </div>
            ))}
        </div>

        <!-- Bottom Accent -->
        <div class="relative mt-16 pt-12">
            <div class="absolute inset-x-0 top-0 h-px bg-gradient-to-r from-transparent via-[#800020]/20 to-transparent"></div>
            <div class="text-center">
                <a 
                    href="/sobre-nosotros" 
                    class="group inline-flex items-center gap-2 text-[#800020] font-medium hover:text-[#900026] transition-colors duration-300"
                >
                    Descubre más sobre nuestros logros
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                    </svg>
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (prefers-reduced-motion: reduce) {
        .transition-all,
        .transition-transform,
        .transition-colors,
        .group-hover\:scale-110,
        .group-hover\:translate-x-1,
        .group-hover\:opacity-100 {
            transition: none !important;
            transform: none !important;
            opacity: 1 !important;
        }
    }
</style>