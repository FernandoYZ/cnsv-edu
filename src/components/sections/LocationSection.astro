---
import data from '@data';
const { Contact, Location } = data;
---

<article class="relative py-16 bg-gray-950" aria-labelledby="location-title">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <!-- Encabezado -->
        <header class="relative max-w-2xl mx-auto text-center mb-12">
            <span class="inline-flex items-center gap-2 rounded-full bg-primary/20 border border-primary/20 px-4 py-1.5 text-sm font-medium text-secundary mb-4">
                {Location.label}
            </span>
            <h1 id="location-title" class="text-3xl font-bold text-white sm:text-4xl mb-4">
                {Location.titulo}
            </h1>
            <p class="text-lg text-gray-400">
                {Location.descripcion}
            </p>
        </header>

        <!-- Contenedor del Mapa -->
        <section class="relative mx-auto rounded-2xl overflow-hidden shadow-xl bg-white/5">
            <div class="relative w-full h-[500px]">
                <iframe
                    src={Location.map.url}
                    width="100%"
                    height="100%"
                    style="border:0;"
                    allowfullscreen
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"
                    class="grayscale-[0.1] hover:grayscale-0 transition-all duration-300"
                    title="Ubicación del Seminario Menor"
                    aria-label="Mapa interactivo mostrando la ubicación del Seminario Menor"
                >
                </iframe>
            </div>

            <!-- Tarjeta de Información de Ubicación -->
            <aside class="absolute top-4 right-4 max-w-sm bg-black/30 backdrop-blur-md rounded-xl overflow-hidden shadow-lg border border-white/20">
                <div class="p-6">
                    <div class="flex items-start gap-4">
                        <span class="inline-flex items-center justify-center w-12 h-12 rounded-xl bg-primary/20 text-secundary flex-shrink-0" aria-hidden="true">
                            <svg 
                                xmlns="http://www.w3.org/2000/svg" 
                                viewBox="0 0 24 24" 
                                fill="none" 
                                stroke="currentColor" 
                                stroke-width="1.5" 
                                class="w-6 h-6"
                            >
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                            </svg>
                        </span>
                        <div>
                            <h2 class="text-lg font-semibold text-white mb-1">
                                {Contact.info.direccion.titulo}
                            </h2>
                            <p class="text-gray-300 text-sm">
                                {Contact.info.direccion.contenido}
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Botones de Acción -->
                <nav class="flex border-t border-white/10">
                    <a 
                        href={Location.locacion.href}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex-1 px-4 py-3 text-white text-sm font-medium hover:bg-white/10 transition-colors duration-300 text-center"
                        aria-label="Abrir ubicación en Google Maps en una nueva pestaña"
                    >
                        Ver en Google Maps
                        <span class="sr-only">(se abre en una nueva pestaña)</span>
                    </a>
                </nav>
            </aside>
        </section>

        <!-- Información Adicional -->
        <section class="max-w-3xl mx-auto mt-8" aria-label="Información adicional de contacto">
            <div class="grid sm:grid-cols-2 gap-6">
                {Location.infoAdicional.map(info => (
                    <article class="flex items-center gap-4 p-4 rounded-xl bg-white/5 border border-white/10">
                        <span class="inline-flex items-center justify-center w-10 h-10 rounded-lg bg-primary/20 text-secundary" aria-hidden="true">
                            <svg 
                                xmlns="http://www.w3.org/2000/svg" 
                                viewBox="0 0 24 24" 
                                fill="none" 
                                stroke="currentColor" 
                                stroke-width="1.5" 
                                class="w-5 h-5"
                            >
                                <path 
                                    stroke-linecap="round" 
                                    stroke-linejoin="round" 
                                    d={info.icon} 
                                />
                            </svg>
                        </span>
                        <div>
                            <h3 class="text-white font-medium">{info.titulo}</h3>
                            <p class="text-gray-400">{info.descripcion}</p>
                        </div>
                    </article>
                ))}
            </div>
        </section>
    </div>
</article>

<style>
    @media (prefers-reduced-motion: reduce) {
        :root {
            --duration-300: 0ms;
        }

        [class*='transition-'],
        [class*='hover\\:'],
        .grayscale-[0.1] {
            transition: none !important;
            filter: none !important;
        }
    }
</style>