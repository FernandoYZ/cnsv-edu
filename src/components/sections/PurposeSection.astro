---
import data from '@data';

const { proposito } = data;
---

<section class="relative py-24 overflow-hidden bg-gradient-to-b from-white via-gray-50 to-white" aria-labelledby="proposito-title">
    <!-- Elementos decorativos de fondo -->
    <div class="absolute inset-0">
        <!-- Patrón de puntos sutil -->
        <div class="absolute inset-0" 
             style="background-image: radial-gradient(#800020 0.5px, transparent 0.5px);
                    background-size: 24px 24px;
                    opacity: 0.05;">
        </div>
        
        <!-- Formas decorativas -->
        <div class="absolute top-0 right-0 -mr-96 -mt-96 w-[800px] h-[800px] rounded-full bg-primary/5 blur-3xl"></div>
        <div class="absolute bottom-0 left-0 -ml-96 -mb-96 w-[800px] h-[800px] rounded-full bg-primary/5 blur-3xl"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-6 lg:px-8">
        <!-- Encabezado de la sección -->
        <header class="max-w-2xl mx-auto text-center mb-24">
            <div class="inline-flex items-center justify-center space-x-3 mb-6">
                <div class="h-[1px] w-12 bg-gradient-to-r from-transparent via-primary to-transparent"></div>
                <span class="px-4 py-2 rounded-full bg-primary/5 text-sm font-medium text-primary tracking-wider">
                    {proposito.header.label}
                </span>
                <div class="h-[1px] w-12 bg-gradient-to-r from-transparent via-primary to-transparent"></div>
            </div>
            <h2 id="proposito-title" class="text-4xl font-bold text-gray-900 mb-6">
                {proposito.header.titulo1}
                <span class="relative whitespace-nowrap text-primary">
                    <svg aria-hidden="true" viewBox="0 0 418 42" class="absolute left-0 top-full h-[0.4em] w-full fill-primary/20" preserveAspectRatio="none">
                        <path d="M203.371.916c-26.013-2.078-76.686 1.963-124.73 9.946L67.3 12.749C35.421 18.062 18.2 21.766 6.004 25.934 1.244 27.561.828 27.778.874 28.61c.07 1.214.828 1.121 9.595-1.176 9.072-2.377 17.15-3.92 39.246-7.496C123.565 7.986 157.869 4.492 195.942 5.046c7.461.108 19.25 1.696 19.17 2.582-.107 1.183-7.874 4.31-25.75 10.366-21.992 7.45-35.43 12.534-36.701 13.884-2.173 2.308-.202 4.407 4.442 4.734 2.654.187 3.263.157 15.593-.78 35.401-2.686 57.944-3.488 88.365-3.143 46.327.526 75.721 2.23 130.788 7.584 19.787 1.924 20.814 1.98 24.557 1.332l.066-.011c1.201-.203 1.53-1.825.399-2.335-2.911-1.31-4.893-1.604-22.048-3.261-57.509-5.556-87.871-7.36-132.059-7.842-23.239-.254-33.617-.116-50.627.674-11.629.54-42.371 2.494-46.696 2.967-2.359.259 8.133-3.625 26.504-9.81 23.239-7.825 27.934-10.149 28.304-14.005.417-4.348-3.529-6-16.878-7.066Z" />
                    </svg>
                    <span class="relative">{proposito.header.span}</span>
                </span>
                {proposito.header.titulo2}
            </h2>
            <p class="text-lg text-gray-600 max-w-prose mx-auto">
                {proposito.header.descripcion}
            </p>
        </header>

        <!-- Grid de Misión, Visión y Valores -->
        <div class="grid lg:grid-cols-3 gap-8">
            <!-- Misión -->
            <article class="group relative">
                <!-- Efecto de hover -->
                <div class="absolute -inset-4 bg-gradient-to-r from-primary/10 via-primary/5 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300 blur-xl rounded-xl"></div>
                
                <!-- Contenido -->
                <div class="relative h-full p-8 bg-white rounded-xl shadow-sm border border-gray-100">
                    <!-- Icono -->
                    <div class="inline-flex items-center justify-center w-14 h-14 rounded-xl bg-primary/10 text-primary mb-6">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                        </svg>
                    </div>

                    <!-- Texto -->
                    <h3 class="text-xl font-semibold text-gray-900 mb-4">Nuestra Misión</h3>
                    <p class="text-gray-600 leading-relaxed mb-6">
                        {proposito.mision}
                    </p>

                </div>
            </article>

            <!-- Visión -->
            <article class="group relative">
                <div class="absolute -inset-4 bg-gradient-to-r from-primary/10 via-primary/5 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300 blur-xl rounded-xl"></div>
                
                <div class="relative h-full p-8 bg-white rounded-xl shadow-sm border border-gray-100">
                    <div class="inline-flex items-center justify-center w-14 h-14 rounded-xl bg-primary/10 text-primary mb-6">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064" />
                        </svg>
                    </div>

                    <h3 class="text-xl font-semibold text-gray-900 mb-4">Nuestra Visión</h3>
                    <p class="text-gray-600 leading-relaxed mb-6">
                        {proposito.vision}
                    </p>

                </div>
            </article>

            <!-- Valores -->
            <article class="group relative">
                <div class="absolute -inset-4 bg-gradient-to-r from-primary/10 via-primary/5 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300 blur-xl rounded-xl"></div>
                
                <div class="relative h-full p-8 bg-white rounded-xl shadow-sm border border-gray-100">
                    <div class="inline-flex items-center justify-center w-14 h-14 rounded-xl bg-primary/10 text-primary mb-6">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                        </svg>
                    </div>

                    <h3 class="text-xl font-semibold text-gray-900 mb-4">Nuestros Valores</h3>
                    <p class="text-gray-600 leading-relaxed mb-6">
                        {proposito.valores}
                    </p>

                    <div class="grid grid-cols-2 gap-4">
                        {proposito.valoresList.map(valor => (
                            <div class="p-1 text-center rounded-lg bg-primary/5 border border-primary/10">
                                <span class="text-xs font-medium text-primary mb-1">{valor.titulo}</span>
                            </div>
                        ))}
                    </div>
                </div>
            </article>
        </div>

        <!-- Cita inspiradora -->
        <blockquote class="relative max-w-3xl mx-auto mt-24 text-center">
            <div class="relative z-10">
                <p class="text-2xl italic font-light text-gray-600">
                    "{proposito.cita.texto}"
                </p>
                <footer class="mt-4">
                    <p class="text-base font-semibold text-primary">{proposito.cita.autor}</p>
                    <p class="text-sm text-gray-500">{proposito.cita.cargo}</p>
                </footer>
            </div>
            <div class="absolute top-0 left-0 -translate-x-6 -translate-y-8 text-primary/5" aria-hidden="true">
                <svg width="45" height="36" class="fill-current">
                    <path d="M13.415.001C6.07 5.185.887 13.681.887 23.041c0 7.632 4.608 12.096 9.936 12.096 5.04 0 8.784-4.032 8.784-8.784 0-4.752-3.312-8.208-7.632-8.208-.864 0-2.016.144-2.304.288.72-4.896 5.328-10.656 9.936-13.536L13.415.001zm24.768 0c-7.2 5.184-12.384 13.68-12.384 23.04 0 7.632 4.608 12.096 9.936 12.096 4.896 0 8.784-4.032 8.784-8.784 0-4.752-3.456-8.208-7.776-8.208-.864 0-1.872.144-2.16.288.72-4.896 5.184-10.656 9.792-13.536L38.183.001z"/>
                </svg>
            </div>
        </blockquote>
    </div>
</section>

<style>
    @media (prefers-reduced-motion: reduce) {
        .group-hover\:opacity-100,
        .transition-all,
        .group-hover\:scale-105 {
            transition: none !important;
            transform: none !important;
            opacity: 1 !important;
        }
    }
</style>