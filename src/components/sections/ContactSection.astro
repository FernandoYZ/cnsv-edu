---
import data from '@data'
const { contacto, marca, redesSociales } = data;
const crearMailTo = (correo: string) => `mailto:${correo}`;
const infoContacto = Object.entries(contacto).map(([key, info]) => ({
    ...info,
    href: info.esEnlace ? crearMailTo(info.contenido) : undefined
}));
---

<section class="relative py-24 bg-gray-950 mt-8">
    <!-- Wave Shapes -->
    <div class="absolute top-0 left-0 w-full overflow-hidden" style="transform: translateY(-98%);">
        <!-- Secondary Wave (más clara y con opacidad) -->
        <svg 
            class="absolute bottom-0 w-full h-32" 
            xmlns="http://www.w3.org/2000/svg" 
            viewBox="0 0 1440 320" 
            preserveAspectRatio="none"
            style="transform: translateY(-25%) scale(1.1)"
        >
        
            <path 
                fill="#030712"
                fill-opacity="0.15"
                d="M0,192L60,181.3C120,171,240,149,360,154.7C480,160,600,192,720,192C840,192,960,160,1080,144C1200,128,1320,128,1380,128L1440,128L1440,320L1380,320C1320,320,1200,320,1080,320C960,320,840,320,720,320C600,320,480,320,360,320C240,320,120,320,60,320L0,320Z"
            ></path>
        </svg>
        <!-- Primary Wave (más oscura) -->
        <svg 
            class="relative w-full h-32" 
            xmlns="http://www.w3.org/2000/svg" 
            viewBox="0 0 1440 320" 
            preserveAspectRatio="none"
            style="transform: scale(1.1)"
        >
            <path 
                fill="#030712" 
                d="M0,128L80,144C160,160,320,192,480,192C640,192,800,160,960,154.7C1120,149,1280,171,1360,181.3L1440,192L1440,320L1360,320C1280,320,1120,320,960,320C800,320,640,320,480,320C320,320,160,320,80,320L0,320Z"
            ></path>
        </svg>
    </div>

    <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <!-- Enhanced Header -->
        <div class="relative max-w-2xl mx-auto text-center mb-16">
            <span class="inline-flex items-center gap-2 rounded-full bg-[#800020]/20 border border-[#800020]/20 px-4 py-1.5 text-sm font-medium text-[#ff9eaa]">
                Estamos para Ayudarte
            </span>
            <h2 class="mt-4 text-3xl font-bold tracking-tight text-white sm:text-4xl">
                Contacta con Nosotros
            </h2>
            <p class="mt-4 text-lg leading-relaxed text-gray-400">
                {marca.descripcion}
            </p>
        </div>

        <!-- Enhanced Contact Cards Grid -->
        <div class="relative grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {infoContacto.map(({ titulo, contenido, esEnlace, icon, href }) => (
                <div class="group h-full">
                    <div class="relative h-full p-8 bg-gray-900/50 backdrop-blur-xl border border-gray-800 rounded-2xl transition-all duration-300 hover:border-[#800020]/50 hover:transform hover:-translate-y-1">
                        <div class="absolute inset-0 bg-gradient-to-b from-[#800020]/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 rounded-2xl"></div>
                        
                        <div class="relative h-full flex flex-col">
                            <div class="flex items-center gap-4 mb-6">
                                <span class="inline-flex items-center justify-center w-12 h-12 rounded-xl bg-[#800020]/20 text-[#ff9eaa] transform transition-transform duration-300 group-hover:scale-110">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                        <Fragment set:html={icon} />
                                    </svg>
                                </span>
                                <h3 class="text-lg font-semibold text-white">{titulo}</h3>
                            </div>
                            
                            {href ? (
                                <a 
                                    href={href}
                                    class="group/item mt-auto inline-flex items-center text-gray-400 hover:text-[#ff9eaa] transition-colors duration-300"
                                >
                                    <span class="text-lg font-medium break-all group-hover/item:translate-x-1 transition-transform duration-300">
                                        {contenido}
                                    </span>
                                </a>
                            ) : (
                                <p class="mt-auto text-gray-400 leading-relaxed">
                                    {contenido}
                                </p>
                            )}
                        </div>
                    </div>
                </div>
            ))}
        </div>

        <!-- Enhanced Schedule and Social Media Section -->
        <div class="mt-16 mx-auto">
            <div class="relative bg-gradient-to-br from-[#800020] to-[#600018] rounded-2xl overflow-hidden">
                <!-- Enhanced Background Pattern -->
                <div class="absolute inset-0">
                    <div class="absolute inset-0 bg-[#800020] mix-blend-multiply"></div>
                    <div class="absolute inset-0 opacity-10" 
                        style="background-image: repeating-linear-gradient(45deg, #fff 0, #fff 1px, transparent 0, transparent 50%);
                               background-size: 20px 20px;">
                    </div>
                    <div class="absolute inset-0 bg-gradient-to-t from-black/20 via-transparent to-transparent"></div>
                </div>

                <div class="relative p-8 lg:p-10">
                    <div class="grid gap-10 lg:grid-cols-2 lg:gap-16">
                        <!-- Enhanced Schedule Section -->
                        <div class="relative">
                            <!-- Floating Decoration -->
                            <div class="absolute -top-8 -left-8 w-16 h-16">
                                <div class="absolute inset-0 rounded-full bg-white/5 animate-pulse"></div>
                                <div class="absolute inset-2 rounded-full bg-white/10 backdrop-blur-sm border border-white/20"></div>
                            </div>
                            
                            <div class="space-y-8">
                                <div class="flex items-center gap-4">
                                    <span class="inline-flex items-center justify-center w-14 h-14 rounded-xl bg-white/10 text-white shadow-lg backdrop-blur-sm border border-white/20">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                    </span>
                                    <div>
                                        <h3 class="text-xl font-bold text-white">Horario de Atención</h3>
                                        <p class="text-white/70 text-sm">Visítanos en nuestro horario de oficina</p>
                                    </div>
                                </div>

                                <div class="space-y-6">
                                    {[
                                        {
                                            days: "Lunes a Viernes",
                                            hours: "8:00 AM - 4:00 PM"
                                        },
                                        {
                                            days: "Sábados",
                                            hours: "9:00 AM - 1:00 PM"
                                        }
                                    ].map((schedule) => (
                                        <div class="relative pl-8 border-l-2 border-white/20 group">
                                            <div class="absolute -left-[11px] top-2 w-5 h-5 rounded-full bg-[#ff9eaa]/20 border-2 border-[#ff9eaa] transition-transform duration-300 group-hover:scale-110"></div>
                                            <p class="text-lg font-medium text-white">{schedule.days}</p>
                                            <div class="flex items-center gap-2 text-white/80 mt-1">
                                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                </svg>
                                                <span class="text-lg">{schedule.hours}</span>
                                            </div>
                                        </div>
                                    ))}
                                </div>
                            </div>
                        </div>

                        <!-- Enhanced Social Media Section -->
                        <div class="relative lg:border-l lg:border-white/20 lg:pl-16">
                            <div class="space-y-8">
                                <div class="flex items-center gap-4">
                                    <span class="inline-flex items-center justify-center w-14 h-14 rounded-xl bg-white/10 text-white shadow-lg backdrop-blur-sm border border-white/20">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 8.511c.884.284 1.5 1.128 1.5 2.097v4.286c0 1.136-.847 2.1-1.98 2.193-.34.027-.68.052-1.02.072v3.091l-3-3c-1.354 0-2.694-.055-4.02-.163a2.115 2.115 0 01-.825-.242m9.345-8.334a2.126 2.126 0 00-.476-.095 48.64 48.64 0 00-8.048 0c-1.131.094-1.976 1.057-1.976 2.192v4.286c0 .837.46 1.58 1.155 1.951m9.345-8.334V6.637c0-1.621-1.152-3.026-2.76-3.235A48.455 48.455 0 0011.25 3c-2.115 0-4.198.137-6.24.402-1.608.209-2.76 1.614-2.76 3.235v6.226c0 1.621 1.152 3.026 2.76 3.235.577.075 1.157.14 1.74.194V21l4.155-4.155" />
                                        </svg>
                                    </span>
                                    <div>
                                        <h3 class="text-xl font-bold text-white">Síguenos</h3>
                                        <p class="text-white/70 text-sm">Mantente conectado en nuestras redes</p>
                                    </div>
                                </div>

                                <div class="grid grid-cols-2 gap-4">
                                    {redesSociales.map((red) => (
                                        <a
                                            href={red.href}
                                            class="group flex items-center gap-4 p-4 rounded-xl bg-white/10 hover:bg-white/20 transition-all duration-300 backdrop-blur-sm border border-white/10 hover:border-white/20 hover:transform hover:-translate-y-1"
                                            target="_blank"
                                            rel="noopener noreferrer"
                                            aria-label={red.label}
                                        >
                                            <span class="inline-flex items-center justify-center w-10 h-10 rounded-lg bg-white/10 text-white group-hover:scale-110 transition-transform duration-300">
                                                <Fragment set:html={red.icono} />
                                            </span>
                                            <span class="text-white font-medium">{red.label}</span>
                                        </a>
                                    ))}
                                </div>

                                <div class="text-center">
                                    <p class="text-white/60 text-sm">
                                        Síguenos y mantente al día con nuestras últimas noticias
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    @keyframes pulse {
        0%, 100% { opacity: 0.6; }
        50% { opacity: 0.4; }
    }

    @media (prefers-reduced-motion: reduce) {
        .transition-all,
        .transition-transform,
        .transition-colors,
        .transition-opacity,
        .group-hover\:opacity-100,
        .group-hover\:scale-110,
        .group-hover\:translate-y-1,
        .group-hover/item\:translate-x-1,
        .animate-pulse {
            transition: none !important;
            transform: none !important;
            opacity: 1 !important;
            animation: none !important;
        }
    }
</style>