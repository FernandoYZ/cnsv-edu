---
import { Image } from 'astro:assets';
import donationJPG from '@assets/images/donation.jpg';
import PrimaryButton from '@components/buttons/PrimaryButton.astro';
import data from '@data';
const { about } = data;
---

<article class="relative py-24 bg-gradient-to-b from-gray-50/10 via-gray-50/50 to-white overflow-hidden" aria-labelledby="about-title">
    <!-- Fondo decorativo -->
    <aside class="absolute inset-0" aria-hidden="true">
        <div class="absolute left-0 -mt-32 -ml-16 w-64 h-64 rounded-full bg-primary/5 blur-3xl"></div>
        <div class="absolute -top-32 -right-32 w-[500px] h-[500px] rounded-full bg-primary/10 blur-3xl"></div>
        <div class="absolute -bottom-32 -left-32 w-[500px] h-[500px] rounded-full bg-primary/10 blur-3xl"></div>
        <div class="absolute inset-0 bg-[radial-gradient(#800020_0.5px,transparent_0.5px)] opacity-[0.015] [background-size:16px_16px]"></div>
    </aside>

    <div class="relative max-w-7xl mx-auto px-6 lg:px-8">
        <!-- Encabezado -->
        <header class="max-w-2xl mx-auto text-center mb-20">
            <div class="inline-flex items-center justify-center space-x-3 mb-6" role="presentation">
                <div class="h-[1px] w-12 bg-gradient-to-r from-transparent via-primary to-transparent"></div>
                <span class="px-4 py-2 rounded-full bg-primary/5 text-sm font-medium text-primary tracking-wider">
                    {about.label}
                </span>
                <div class="h-[1px] w-12 bg-gradient-to-r from-transparent via-primary to-transparent"></div>
            </div>
            <h1 id="about-title" class="text-4xl lg:text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-gray-900 to-gray-600 leading-tight">{about.titulo}</h1>
        </header>

        <main class="grid lg:grid-cols-2 gap-16 items-center">
            <!-- Columna de Contenido -->
            <section class="space-y-12">
                <!-- Declaración de Misión -->
                <div class="relative">
                    <div class="absolute -left-4 top-0 w-1 h-full bg-gradient-to-b from-primary via-primary/50 to-transparent rounded-full" aria-hidden="true"></div>
                    <p class="text-xl text-gray-600 leading-relaxed">
                        {about.descripcion}
                    </p>
                </div>

                <!-- Características -->
                <ul class="grid gap-6" role="list">
                    {about.features.map(feature => (
                        <li class="group relative">
                            <div class="absolute -inset-2 bg-gradient-to-r from-primary/10 to-transparent rounded-xl blur-xl opacity-0 group-hover:opacity-100 transition-all duration-500"></div>
                            <article class="relative flex p-6 bg-white rounded-xl shadow-sm hover:shadow-md transition-all duration-300">
                                <div class="flex gap-6">
                                    <span class="inline-flex items-center justify-center w-14 h-14 rounded-xl bg-gradient-to-br from-primary/10 to-primary/20 text-primary flex-shrink-0">
                                        <svg 
                                            xmlns="http://www.w3.org/2000/svg" 
                                            class="w-7 h-7" 
                                            viewBox="0 0 24 24" 
                                            fill="none" 
                                            stroke="currentColor"
                                            stroke-width="2"
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            aria-hidden="true"
                                        >
                                            <path d={feature.icon} />
                                        </svg>
                                    </span>
                                    <div>
                                        <h2 class="text-base font-semibold text-gray-900 mb-2">{feature.title}</h2>
                                        <p class="text-sm text-gray-600 leading-relaxed">{feature.description}</p>
                                    </div>
                                </div>
                            </article>
                        </li>
                    ))}
                </ul>

                <!-- CTA -->
                <nav class="pt-6">
                    <PrimaryButton href="sobre-nosotros" nombre="Conoce Nuestra Historia" label="historia" />
                </nav>
            </section>

            <!-- Columna de Imagen -->
            <aside class="relative group">
                <figure class="relative">
                    <!-- Elementos decorativos -->
                    <div class="absolute -inset-4 bg-gradient-to-r from-primary/20 via-primary/10 to-transparent rounded-2xl blur-2xl opacity-0 group-hover:opacity-100 transition-all duration-700" aria-hidden="true"></div>
                    <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-primary/20 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-500" aria-hidden="true"></div>

                    <!-- Contenedor de imagen principal -->
                    <div class="relative rounded-2xl overflow-hidden bg-gray-100 shadow-xl">
                        <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-500" aria-hidden="true"></div>
                        
                        <Image
                            src={donationJPG}
                            alt="Estudiantes del Colegio Seminario Menor participando en actividades académicas"
                            class="w-full aspect-[4/3] object-cover transform transition-transform duration-700 group-hover:scale-105"
                            loading="lazy"
                            decoding="async"
                            quality={90}
                            format="avif"
                            widths={[400, 800, 1200]}
                            sizes="(max-width: 640px) 400px, (max-width: 1024px) 800px, 1200px"
                        />

                        <!-- Patrón de superposición -->
                        <div class="absolute inset-0 bg-gradient-to-br from-primary/10 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-500 mix-blend-overlay" aria-hidden="true"></div>
                    </div>

                    <!-- Marco decorativo -->
                    <div class="absolute -inset-0.5 rounded-2xl bg-gradient-to-br from-primary/20 via-primary/10 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-500" aria-hidden="true"></div>
                </figure>
            </aside>
        </main>
    </div>
</article>

<style>
    @media (prefers-reduced-motion: reduce) {
        :root {
            --duration-300: 0ms;
            --duration-500: 0ms;
            --duration-700: 0ms;
        }

        .transition-all,
        .transition-transform,
        .transition-colors,
        [class*='hover\\:'],
        [class*='group-hover\\:'],
        [class*='blur-'] {
            transition: none !important;
            transform: none !important;
            filter: none !important;
        }
    }
</style>