---
import data from '@data';
const { Donation } = data;
import PrimaryButton from '@components/buttons/PrimaryButton.astro';
import SecundaryButton from '@components/buttons/SecundaryButton.astro';
---

<article class="relative py-24 overflow-hidden" aria-labelledby="donation-title">
    <!-- Fondo con motivos religiosos -->
    <aside class="absolute inset-0" aria-hidden="true">
        <!-- Gradiente base -->
        <div class="absolute inset-0 bg-gradient-to-b from-white via-gray-50/80 to-white"></div>
        
        <!-- Patrón de cuadrícula sutil -->
        <div class="absolute inset-0" 
             style="background-image: linear-gradient(#800020 0.5px, transparent 0.5px), linear-gradient(to right, #800020 0.5px, transparent 0.5px);
                    background-size: 40px 40px;
                    opacity: 0.03;">
        </div>
        
        <!-- Formas decorativas -->
        <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full">
            <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-primary/5 rounded-full blur-3xl"></div>
            <div class="absolute bottom-1/4 right-1/4 w-64 h-64 bg-primary/5 rounded-full blur-3xl"></div>
        </div>
    </aside>

    <div class="relative max-w-7xl mx-auto px-6 lg:px-8">
        <main class="grid lg:grid-cols-2 gap-16 items-center">
            <!-- Columna de Contenido -->
            <section class="relative z-10 space-y-10">
                <header class="space-y-6">
                    <div class="flex items-center gap-3">
                        <span class="flex h-3 w-3" aria-hidden="true">
                            <span class="animate-ping absolute inline-flex h-3 w-3 rounded-full bg-primary opacity-75"></span>
                            <span class="relative inline-flex rounded-full h-3 w-3 bg-primary"></span>
                        </span>
                        <span class="px-4 py-2 rounded-full bg-primary/5 text-sm font-medium text-primary tracking-wider">
                            {Donation.label}
                        </span>
                    </div>

                    <h1 id="donation-title" class="text-4xl lg:text-5xl font-bold text-gray-900 leading-tight">
                        {Donation.titulo1}
                        <span class="relative whitespace-nowrap text-primary">
                            <svg aria-hidden="true" viewBox="0 0 418 42" class="absolute left-0 top-full h-[0.4em] w-full fill-primary/20" preserveAspectRatio="none">
                                <path d={Donation.icono}></path>
                            </svg>
                            <span class="relative">{Donation.span}</span>
                        </span>
                        {Donation.titulo2}
                    </h1>

                    <p class="text-xl text-gray-600 leading-relaxed max-w-2xl">
                        {Donation.descripcion}
                    </p>
                </header>

                <!-- Características -->
                <ul class="space-y-6" role="list">
                    {Donation.features.map(feature => (
                        <li class="flex items-start gap-4">
                            <span class="flex-none inline-flex items-center justify-center w-12 h-12 rounded-xl bg-primary/10 text-primary">
                                <svg 
                                    xmlns="http://www.w3.org/2000/svg" 
                                    class="w-6 h-6" 
                                    fill="none" 
                                    viewBox="0 0 24 24" 
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    aria-hidden="true"
                                >
                                    <path d={feature.icon} />
                                </svg>
                            </span>
                            <div>
                                <h2 class="text-lg font-semibold text-gray-900">{feature.title}</h2>
                                <p class="text-gray-600">{feature.description}</p>
                            </div>
                        </li>
                    ))}
                </ul>

                <!-- CTA -->
                <nav class="flex flex-col sm:flex-row gap-4 pt-4">
                    <PrimaryButton href="donacion" nombre="Realizar Donación" label="donación" />
                    <SecundaryButton href="donacion" nombre="Ver Impacto" label="impacto" />
                </nav>
            </section>

            <!-- Columna de Impacto -->
            <aside class="relative lg:mt-0">
                <!-- Tarjeta Principal -->
                <section class="relative bg-white rounded-2xl p-8 shadow-xl border border-gray-100">
                    <header class="flex items-center gap-6 mb-8">
                        <span class="inline-flex items-center justify-center w-16 h-16 rounded-xl bg-primary/10" aria-hidden="true">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                            </svg>
                        </span>
                        <div>
                            <h2 class="text-2xl font-bold text-gray-900">{Donation.card.titulo}</h2>
                            <p class="text-gray-600">{Donation.card.descripcion}</p>
                        </div>
                    </header>

                    <!-- Tarjetas de Impacto -->
                    <ul class="space-y-4" role="list">
                        {Donation.impactAreas.map(item => (
                            <li class="flex items-center gap-4 p-4 rounded-xl bg-gray-50 hover:bg-gray-100 transition-colors duration-300">
                                <span class="flex-none inline-flex items-center justify-center w-8 h-8 rounded-full bg-primary/10 text-primary" aria-hidden="true">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                    </svg>
                                </span>
                                <span class="text-gray-700 font-medium">{item}</span>
                            </li>
                        ))}
                    </ul>
                </section>

                <!-- Elementos Decorativos -->
                <div class="absolute -inset-4 -z-10" aria-hidden="true">
                    <div class="absolute inset-0 bg-gradient-to-r from-primary/20 to-transparent opacity-50 blur-2xl rounded-3xl"></div>
                </div>
            </aside>
        </main>
    </div>
</article>

<style>
    @media (prefers-reduced-motion: reduce) {
        :root {
            --duration-300: 0ms;
            --duration-500: 0ms;
        }

        [class*='transition-'],
        [class*='animate-'],
        [class*='group-hover\\:'],
        [class*='hover\\:'] {
            transition: none !important;
            transform: none !important;
            opacity: 1 !important;
            animation: none !important;
        }
    }
</style>