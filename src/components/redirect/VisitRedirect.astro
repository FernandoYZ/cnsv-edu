---
import { Image } from 'astro:assets';
import data from '@data';
const { Visit } = data;
import facilityJPG from '@assets/images/donation.jpg';
import libraryJPG from '@assets/images/donation.jpg';
import sportsJPG from '@assets/images/donation.jpg';
import PrimaryButton from '@components/buttons/PrimaryButton.astro';
import SecundaryButton from '@components/buttons/SecundaryButton.astro';

const sideImages = [
    { 
        src: libraryJPG, 
        alt: "Biblioteca moderna con estanterías y áreas de estudio", 
        title: "Biblioteca", 
        desc: "Centro de recursos" 
    },
    { 
        src: sportsJPG, 
        alt: "Área deportiva con canchas multifuncionales", 
        title: "Deportes", 
        desc: "Espacios recreativos" 
    }
];
---

<article class="relative py-24 overflow-hidden" aria-labelledby="campus-title">
    <!-- Fondo decorativo -->
    <aside class="absolute inset-0" aria-hidden="true">
        <div class="absolute inset-0 bg-gradient-to-b from-white via-gray-50 to-gray-100"></div>
        
        <!-- Patrón de superposición -->
        <div class="absolute inset-0" 
             style="background-image: url('data:image/svg+xml,%3Csvg width=\'30\' height=\'30\' viewBox=\'0 0 30 30\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cpath d=\'M15 3a2 2 0 110 4 2 2 0 010-4zm0 20a2 2 0 110 4 2 2 0 010-4zm10-10a2 2 0 110 4 2 2 0 010-4zM5 13a2 2 0 110 4 2 2 0 010-4z\' fill=\'%23800020\' fill-opacity=\'0.05\'/%3E%3C/svg%3E');
             opacity: 0.5;">
        </div>
        
        <!-- Elementos decorativos -->
        <div class="absolute top-0 right-0 w-1/2 h-1/2 bg-gradient-to-br from-[#800020]/5 to-transparent rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 left-0 w-1/2 h-1/2 bg-gradient-to-tr from-[#800020]/5 to-transparent rounded-full blur-3xl"></div>
    </aside>

    <div class="relative max-w-7xl mx-auto px-6 lg:px-8">
        <div class="grid lg:grid-cols-12 gap-12 items-center">
            <!-- Columna de Contenido -->
            <section class="lg:col-span-5 space-y-8">
                <header class="space-y-6">
                    <span class="inline-flex items-center gap-2 rounded-full bg-[#800020]/5 px-4 py-1.5 text-sm font-medium text-[#800020]">
                        <span class="relative flex h-2 w-2" aria-hidden="true">
                            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-[#800020] opacity-75"></span>
                            <span class="relative inline-flex rounded-full h-2 w-2 bg-[#800020]"></span>
                        </span>
                        {Visit.label}
                    </span>

                    <h1 id="campus-title" class="text-4xl lg:text-5xl font-bold text-gray-900 leading-tight">
                        {Visit.titulo}
                        <span class="relative whitespace-nowrap text-[#800020]">
                            <svg aria-hidden="true" viewBox="0 0 418 42" class="absolute left-0 top-full h-[0.4em] w-full fill-[#800020]/20" preserveAspectRatio="none">
                                <path d={Visit.icon}></path>
                            </svg>
                            <span class="relative">{Visit.span}</span>
                        </span>
                    </h1>

                    <p class="text-xl text-gray-600 leading-relaxed">
                        {Visit.descripcion}
                    </p>
                </header>

                <!-- Estadísticas -->
                <dl class="grid grid-cols-3 gap-6">
                    {Visit.stats.map(stat => (
                        <div class="text-center p-4 bg-white rounded-xl shadow-sm border border-gray-100">
                            <dt class="text-2xl font-bold text-[#800020]">{stat.value}</dt>
                            <dd class="text-sm text-gray-600 mt-1">{stat.label}</dd>
                        </div>
                    ))}
                </dl>

                <!-- Características -->
                <ul class="space-y-6" role="list">
                    {Visit.features.map(feature => (
                        <li class="flex items-start gap-4">
                            <span class="flex-none inline-flex items-center justify-center w-12 h-12 rounded-xl bg-[#800020]/10 text-[#800020]" aria-hidden="true">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <Fragment set:html={feature.icon} />
                                </svg>
                            </span>
                            <div>
                                <h2 class="text-lg font-semibold text-gray-900">{feature.title}</h2>
                                <p class="text-gray-600">{feature.description}</p>
                            </div>
                        </li>
                    ))}
                </ul>

                <!-- CTA -->
                <nav class="flex flex-col sm:flex-row gap-4 pt-6">
                    <PrimaryButton href="visitanos" nombre="Agendar Visita" label="oficina" />
                    <SecundaryButton href="visitanos" nombre="Tour Virtual 360°" label="virtual" />
                </nav>
            </section>

            <!-- Galería de Imágenes -->
            <section class="lg:col-span-7">
                <div class="relative grid grid-cols-12 gap-4">
                    <!-- Imagen Principal -->
                    <article class="col-span-8">
                        <div class="group relative">
                            <div class="absolute -inset-2 bg-gradient-to-r from-[#800020]/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 blur-xl" aria-hidden="true"></div>
                            <figure class="relative rounded-2xl overflow-hidden bg-gray-100 shadow-xl">
                                <Image
                                    src={facilityJPG}
                                    alt="Vista del campus principal mostrando edificios académicos modernos"
                                    class="w-full h-[400px] object-cover"
                                    quality={90}
                                    format="avif"
                                    loading="lazy"
                                    decoding="async"
                                    widths={[400, 800, 1200]}
                                    sizes="(max-width: 640px) 400px, (max-width: 1024px) 800px, 1200px"
                                />
                                <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
                                <figcaption class="absolute bottom-4 left-4 text-white">
                                    <h3 class="text-lg font-semibold">Campus Principal</h3>
                                    <p class="text-sm text-white/90">Infraestructura moderna</p>
                                </figcaption>
                            </figure>
                        </div>
                    </article>

                    <!-- Imágenes Laterales -->
                    <aside class="col-span-4 space-y-4">
                        {sideImages.map(img => (
                            <div class="group relative">
                                <div class="absolute -inset-2 bg-gradient-to-r from-[#800020]/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 blur-xl" aria-hidden="true"></div>
                                <figure class="relative rounded-2xl overflow-hidden bg-gray-100 shadow-lg">
                                    <Image
                                        src={img.src}
                                        alt={img.alt}
                                        class="w-full h-[190px] object-cover"
                                        quality={85}
                                        format="avif"
                                        loading="lazy"
                                        decoding="async"
                                        widths={[200, 400, 800]}
                                        sizes="(max-width: 640px) 200px, (max-width: 1024px) 400px, 800px"
                                    />
                                    <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
                                    <figcaption class="absolute bottom-3 left-3 text-white">
                                        <h3 class="text-sm font-semibold">{img.title}</h3>
                                        <p class="text-xs text-white/90">{img.desc}</p>
                                    </figcaption>
                                </figure>
                            </div>
                        ))}
                    </aside>

                    <!-- Logros -->
                    <article class="col-span-12">
                        <div class="relative">
                            <div class="absolute -inset-2 bg-gradient-to-r from-[#800020]/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 blur-xl" aria-hidden="true"></div>
                            <div class="relative p-6 bg-white rounded-2xl border border-gray-100 shadow-lg">
                                <header class="flex items-center gap-4">
                                    <span class="inline-flex items-center justify-center w-12 h-12 rounded-xl bg-[#800020]/10 text-[#800020]" aria-hidden="true">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={Visit.logros.icon} />
                                        </svg>
                                    </span>
                                    <div>
                                        <h2 class="text-lg font-semibold text-gray-900">{Visit.logros.titulo}</h2>
                                    </div>
                                </header>
                                
                                <ul class="mt-4 space-y-3" role="list">
                                    {Visit.logros.achievements.map(achievement => (
                                        <li class="flex items-center gap-2">
                                            <span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-[#800020]/5 text-[#800020]" aria-hidden="true">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                                </svg>
                                            </span>
                                            <span class="text-gray-600">{achievement}</span>
                                        </li>
                                    ))}
                                </ul>
                            </div>
                        </div>
                    </article>
                </div>
            </section>
        </div>
    </div>
</article>

<style>
    @media (prefers-reduced-motion: reduce) {
        :root {
            --duration-300: 0ms;
            --duration-500: 0ms;
            --duration-700: 0ms;
        }

        [class*='transition-'],
        [class*='animate-'],
        [class*='group-hover\\:'],
        [class*='hover\\:'],
        [class*='blur-'] {
            transition: none !important;
            transform: none !important;
            filter: none !important;
            animation: none !important;
            opacity: 1 !important;
        }
    }
</style>