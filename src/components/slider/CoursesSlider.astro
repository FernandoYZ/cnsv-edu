---
import { Image } from 'astro:assets';

const niveles = {
  primaria: {
    titulo: "Primaria",
    modalidad: "Externo",
    grados: ["5to", "6to"],
    descripcion: "Formación inicial con modalidad externa, permitiendo el retorno a casa después de las actividades académicas.",
    horario: "7:30 AM - 3:00 PM",
    caracteristicas: [
      "Formación académica integral",
      "Acompañamiento espiritual",
      "Actividades extracurriculares",
      "Retorno diario a casa"
    ]
  },
  secundaria: {
    titulo: "Secundaria",
    modalidad: "Internado",
    grados: ["1ro", "2do", "3ro", "4to", "5to"],
    descripcion: "Formación intensiva en modalidad internado, con salida dominical posterior a la Misa.",
    horario: "Régimen de internado semanal",
    caracteristicas: [
      "Formación vocacional",
      "Vida comunitaria",
      "Dirección espiritual personalizada",
      "Salida dominical post-Misa"
    ]
  }
};
---

<section class="py-24 bg-gray-950 relative overflow-hidden">
    <!-- Elementos decorativos -->
    <div class="absolute inset-0 bg-[radial-gradient(#800020_0.5px,transparent_0.5px)] opacity-[0.1] [background-size:16px_16px]"></div>
    <div class="absolute top-0 right-0 w-1/3 h-1/3 bg-gradient-to-br from-[#800020]/20 to-transparent blur-3xl"></div>

    <div class="max-w-7xl mx-auto px-6 lg:px-8 relative">
        <!-- Encabezado -->
        <header class="text-center mb-20">
            <h2 class="text-4xl font-bold text-white mb-6">
                Niveles 
                <span class="text-[#ff9eaa]">Académicos</span>
            </h2>
            <p class="text-gray-400 max-w-2xl mx-auto">
                Formación integral que combina excelencia académica y valores católicos en modalidades adaptadas a cada etapa.
            </p>
        </header>

        <!-- Contenedor de niveles -->
        <div class="grid lg:grid-cols-2 gap-8 items-stretch">
            {Object.entries(niveles).map(([key, nivel]) => (
                <article class="group relative">
                    <!-- Fondo con efecto -->
                    <div class="absolute inset-0 bg-gradient-to-br from-gray-800 to-gray-900 rounded-3xl"></div>
                    <div class="absolute inset-0 bg-gradient-to-br from-[#800020]/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 rounded-3xl"></div>

                    <!-- Contenido -->
                    <div class="relative p-8 h-full">
                        <!-- Etiqueta de modalidad -->
                        <div class="absolute top-6 right-6">
                            <span class="inline-flex items-center px-4 py-2 rounded-full bg-[#800020]/20 border border-[#800020]/30">
                                <span class="relative flex h-2 w-2 mr-2">
                                    <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-[#ff9eaa] opacity-75"></span>
                                    <span class="relative inline-flex rounded-full h-2 w-2 bg-[#ff9eaa]"></span>
                                </span>
                                <span class="text-sm font-medium text-[#ff9eaa]">{nivel.modalidad}</span>
                            </span>
                        </div>

                        <!-- Título y descripción -->
                        <div class="mb-8">
                            <h3 class="text-2xl font-bold text-white mb-4">{nivel.titulo}</h3>
                            <p class="text-gray-400">{nivel.descripcion}</p>
                        </div>

                        <!-- Grados -->
                        <div class="flex gap-3 mb-8">
                            {nivel.grados.map((grado) => (
                                <span class="px-4 py-2 bg-white/5 rounded-lg text-white font-medium">
                                    {grado}
                                </span>
                            ))}
                        </div>

                        <!-- Horario -->
                        <div class="flex items-center gap-3 mb-6 text-[#ff9eaa]">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                            </svg>
                            <span class="text-sm">{nivel.horario}</span>
                        </div>

                        <!-- Características -->
                        <ul class="space-y-3">
                            {nivel.caracteristicas.map((caracteristica) => (
                                <li class="flex items-center gap-3 text-gray-300">
                                    <svg class="h-5 w-5 text-[#800020]" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                    </svg>
                                    <span class="text-sm">{caracteristica}</span>
                                </li>
                            ))}
                        </ul>
                    </div>
                </article>
            ))}
        </div>
    </div>
</section>

<style>
@media (prefers-reduced-motion: reduce) {
    .animate-ping,
    .transition-opacity,
    .group-hover\:opacity-100 {
        animation: none !important;
        transition: none !important;
        opacity: 1 !important;
    }
}
</style>