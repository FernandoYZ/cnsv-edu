---
import PrimaryButton from '@components/buttons/PrimaryButton.astro'
import Layout from '@layouts/Layout.astro'
---

<Layout title="404: No encontrado">
    <main class="min-h-screen flex items-center justify-center bg-white px-6 py-24 sm:py-32 lg:px-8">
        <div class="text-center">
            <!-- Número 404 grande y llamativo -->
            <p class="text-primary text-7xl sm:text-9xl font-bold tracking-tight">404</p>
            
            <!-- Mensaje principal -->
            <h1 class="mt-4 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
                ¡Página no encontrada!
            </h1>
            
            <!-- Descripción -->
            <p class="mt-6 text-base leading-7 text-gray-600">
                Lo sentimos, la página que estás buscando no existe o ha sido movida.
            </p>
            
            <!-- Botón de regreso -->
            <div class="mt-10">
                <PrimaryButton href="" nombre="Volver al inicio" />
            </div>
        </div>
    </main>
</Layout>